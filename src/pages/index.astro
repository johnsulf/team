---
import Layout from '../layouts/Layout.astro';
import ThemeToggle from '../components/ThemeToggle.astro';
---

<Layout>
  <header>
    <nav class="navbar bg-base-200">
      <div class="navbar-start">
        <a href="/" class="btn btn-ghost text-xl font-bold">T</a>
      </div>
      <div class="navbar-center hidden lg:flex">
        <ul class="menu menu-horizontal px-1">
          <li><a href="#about">Om oss</a></li>
          <li><a href="#team">Laget</a></li>
          <li><a href="#contact">Kontakt</a></li>
        </ul>
      </div>
      <div class="navbar-end">
        <ThemeToggle />
        <div class="dropdown dropdown-end lg:hidden">
          <div tabindex="0" role="button" class="btn btn-ghost">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 6h16M4 12h8m-8 6h16"></path>
            </svg>
          </div>
          <ul
            tabindex="0"
            class="menu menu-sm dropdown-content bg-base-200 rounded-box z-10 mt-3 w-52 p-2 shadow"
          >
            <li><a href="#about">Om oss</a></li>
            <li><a href="#team">Laget</a></li>
            <li><a href="#contact">Kontakt</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main class="grow">
    <section class="hero min-h-[70vh] bg-base-100">
      <div class="hero-content text-center">
        <div class="max-w-2xl">
          <h1>TEAM</h1>
          <p class="py-6 text-lg">
            Vi er et diskgolf team basert i Bergen, dedikert til å fremme
            sporten og skape et inkluderende miljø for alle nivåer av spillere.
          </p>
          <div class="flex gap-4 justify-center">
            <a href="#team" class="btn btn-primary">Møt laget</a>
            <a href="#contact" class="btn btn-outline">Kontakt oss</a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <footer
    class="footer footer-horizontal footer-center bg-base-200 text-base-content p-10"
  >
    <nav class="grid grid-flow-col gap-4">
      <a href="#about" class="link link-hover">Om oss</a>
      <a href="#team" class="link link-hover">Laget</a>
      <a href="#contact" class="link link-hover">Kontakt</a>
    </nav>
    <nav class="grid grid-flow-col gap-4">
      <a
        href="https://instagram.com"
        aria-label="Instagram"
        class="btn btn-ghost btn-circle"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path
            d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
          ></path>
        </svg>
      </a>
      <a
        href="https://facebook.com"
        aria-label="Facebook"
        class="btn btn-ghost btn-circle"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="currentColor"
        >
          <path
            d="M9 8h-3v4h3v12h5v-12h3.642l.358-4h-4v-1.667c0-.955.192-1.333 1.115-1.333h2.885v-5h-3.808c-3.596 0-5.192 1.583-5.192 4.615v3.385z"
          ></path>
        </svg>
      </a>
    </nav>
    <aside>
      <p>
        &copy; {new Date().getFullYear()} Bergen Disc Golf Team. Alle rettigheter
        reservert.
      </p>
    </aside>
  </footer>
</Layout>
