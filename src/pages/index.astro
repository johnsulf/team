---
import { Image } from 'astro:assets';
import Layout from '../layouts/Layout.astro';
import Footer from '../layouts/components/Footer.astro';
import Header from '../layouts/components/Header.astro';
import logo from '../assets/logo.svg';
---

<Layout>
  <Header />
  <main class="grow">
    <section class="hero min-h-[70vh] bg-base-100">
      <div class="hero-content text-center flex-col">
        <div class="rounded-full">
          <Image
            src={logo}
            alt="Team Bergen Diskgolf logo"
            width={300}
            height={300}
            class="object-contain logo-adaptive"
          />
        </div>
        <div class="max-w-2xl">
          <h1>Team Bergen?</h1>
          <p class="py-6 text-lg">Mer enn bare en runde.</p>
          <div class="flex gap-4 justify-center">
            <a href="/team" class="btn btn-primary btn-lg">MÃ¸t teamet</a>
            <a href="/kontakt" class="btn btn-outline btn-lg">Kontakt oss</a>
          </div>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
