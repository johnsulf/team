---
const benefits = [
  {
    icon: 'eye',
    text: 'Synlighet på drakter, bag og sosiale medier',
  },
  {
    icon: 'heart',
    text: 'Støtt lokal idrett og voksende miljø',
  },
  {
    icon: 'megaphone',
    text: 'Nå en engasjert målgruppe',
  },
  {
    icon: 'handshake',
    text: 'Fleksible sponsoravtaler',
  },
];

const icons: Record<string, string> = {
  eye: 'M15 12a3 3 0 11-6 0 3 3 0 016 0z M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z',
  heart:
    'M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z',
  megaphone:
    'M11 5.882V19.24a1.76 1.76 0 01-3.417.592l-2.147-6.15M18 13a3 3 0 100-6M5.436 13.683A4.001 4.001 0 017 6h1.832c4.1 0 7.625-1.234 9.168-3v14c-1.543-1.766-5.067-3-9.168-3H7a3.988 3.988 0 01-1.564-.317z',
  handshake:
    'M7 11.5V14m0-2.5v-6a1.5 1.5 0 113 0m-3 6a1.5 1.5 0 00-3 0v2a7.5 7.5 0 0015 0v-5a1.5 1.5 0 00-3 0m-6-3V11m0-5.5v-1a1.5 1.5 0 013 0v1m0 0V11m0-5.5a1.5 1.5 0 013 0v3m0 0V11',
};
---

<section
  class="section-padding bg-primary text-primary-content relative overflow-hidden"
>
  <!-- Decorative elements -->
  <div class="absolute inset-0 opacity-10" aria-hidden="true">
    <div
      class="absolute top-0 right-0 w-96 h-96 rounded-full bg-accent blur-3xl"
    >
    </div>
    <div
      class="absolute bottom-0 left-0 w-80 h-80 rounded-full bg-secondary blur-3xl"
    >
    </div>
  </div>

  <div class="container mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div
      class="max-w-4xl mx-auto flex flex-col lg:flex-row items-center gap-10 lg:gap-16"
    >
      <!-- Content -->
      <div class="flex-1 text-left">
        <h2 class="text-primary-content! mb-4">Bli sponsor</h2>
        <p class="text-primary-content/85 text-lg mb-8">
          Diskgolf vokser raskt i Norge, og Team Bergen? er en synlig og aktiv
          del av miljøet på Vestlandet. Støtt lokal idrett og få eksponering mot
          en engasjert målgruppe.
        </p>

        <ul class="space-y-3 mb-8">
          {
            benefits.map((benefit) => (
              <li class="flex items-center gap-3">
                <span class="w-8 h-8 rounded-full bg-accent/20 flex items-center justify-center shrink-0">
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-4 w-4 text-accent"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      d={icons[benefit.icon]}
                    />
                  </svg>
                </span>
                <span class="text-primary-content/90">{benefit.text}</span>
              </li>
            ))
          }
        </ul>

        <a href="/kontakt#sponsor" class="btn btn-accent btn-lg gap-2">
          Ta kontakt
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-5 w-5"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            stroke-width="2"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
            ></path>
          </svg>
        </a>
      </div>

      <!-- Visual element -->
      <div
        class="shrink-0 w-64 h-64 lg:w-80 lg:h-80 rounded-2xl bg-linear-to-br from-secondary/30 to-accent/30 flex items-center justify-center"
        aria-hidden="true"
      >
        <div
          class="w-48 h-48 lg:w-60 lg:h-60 rounded-xl bg-primary-content/10 backdrop-blur-sm flex items-center justify-center"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="h-24 w-24 lg:h-32 lg:w-32 text-accent"
            fill="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"
            ></path>
          </svg>
        </div>
      </div>
    </div>
  </div>
</section>
