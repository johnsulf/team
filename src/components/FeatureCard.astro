const cardClass =
  variant === 'outline'
    ? 'border-2 border-base-300 bg-base-100'
    : 'bg-base-200';
---

<div class={`card card-hover ${cardClass}`}>
  <div class="card-body items-center text-center">
    <div
      class="icon-wrapper w-14 h-14 rounded-full bg-primary/10 flex items-center justify-center mb-3"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        class="h-7 w-7 text-primary"
        fill="none"
        viewBox="0 0 24 24"
        stroke="currentColor"
        stroke-width="1.5"
      >
        <path
          stroke-linecap="round"
          stroke-linejoin="round"
          d={icons[icon] || icons['check']}></path>
      </svg>
    </div>
    <h3 class="card-title text-lg">{title}</h3>
    {description && <p class="text-sm opacity-80">{description}</p>}
    <slot />
  </div>
</div>
