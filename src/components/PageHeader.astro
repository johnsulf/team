---
interface Props {
  title: string;
  lead?: string;
  centered?: boolean;
}

const { title, lead, centered = true } = Astro.props;
---

<header class="page-header hero-gradient bg-noise relative overflow-hidden">
  <!-- Decorative background elements -->
  <div class="absolute inset-0 opacity-5" aria-hidden="true">
    <div
      class="absolute -top-10 -left-20 w-72 h-72 rounded-full bg-primary blur-3xl"
    >
    </div>
    <div
      class="absolute -bottom-10 -right-20 w-64 h-64 rounded-full bg-secondary blur-3xl"
    >
    </div>
  </div>

  <div
    class="container mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24 relative z-10"
  >
    <div class={`max-w-3xl ${centered ? 'mx-auto text-center' : ''}`}>
      <h1 class="animate-fade-up mb-4">{title}</h1>
      {
        lead && (
          <p class="lead max-w-2xl animate-fade-up stagger-1 mx-auto">{lead}</p>
        )
      }
      <slot />
    </div>
  </div>
</header>

<style>
  .page-header {
    min-height: 40vh;
    display: flex;
    align-items: center;
  }
</style>
